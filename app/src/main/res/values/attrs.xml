<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <attr name="autoScaleTextViewStyle" />
    <declare-styleable name="AutoScaleTextView">
        <attr name="minTextSize" format="dimension" />
    </declare-styleable>
    <declare-styleable name="ConvenientBanner">
        <attr name="canLoop" format="boolean" />
    </declare-styleable>

    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <!-- {@deprecated Use civ_circlebackground_color instead.} -->
        <attr name="civ_fill_color" format="color" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <!--阅读器-->
    <declare-styleable name="CircleImageViewReader">
        <attr name="border_width" format="dimension" />
        <attr name="border_color" format="color" />
    </declare-styleable>

    <!--波浪view-->
    <declare-styleable name="WaveView">
        <attr name="wave_color" format="color" />
        <attr name="wave_length_multiple" format="float"></attr>

    </declare-styleable>

    <declare-styleable name="CustomLayout">
        <attr name="backgroundColor" format="reference" />
    </declare-styleable>

    <declare-styleable name="ZoomRecyclerView">
        <attr name="min_scale" format="float" />
        <attr name="max_scale" format="float" />
        <attr name="default_scale" format="float" />
        <attr name="zoom_duration" format="integer" />
    </declare-styleable>
</resources>