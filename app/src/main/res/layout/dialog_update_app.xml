<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_320dp"
    android:orientation="vertical"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/update_top"
            android:scaleType="fitEnd"
            android:layout_marginBottom="@dimen/dimens_minus_2dp"
            />

        <TextView
            android:id="@+id/dialog_updateapp_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFF574C"
            android:textSize="@dimen/dimens_16dp"
            android:paddingLeft="@dimen/dimens_30dp"
            android:background="@color/white"
            android:singleLine="true"
            android:paddingTop="@dimen/dimens_10dp"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_160dp"
            android:layout_below="@+id/imageView"
            android:background="@drawable/shape_sol_ffffff_cor_bottom_16"
            android:orientation="vertical">

            <TextView
                android:id="@+id/dialog_updateapp_sec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:maxHeight="@dimen/dimens_90dp"
                android:paddingLeft="@dimen/dimens_30dp"
                android:textColor="@color/updategray"
                android:textSize="@dimen/dimens_12dp"
                android:lineSpacingExtra="@dimen/dimens_3dp"
                />

            <LinearLayout
                android:id="@+id/dialog_updateapp_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/lightgray2"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginBottom="@dimen/dimens_15dp"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/dimens_15dp"
                android:layout_marginLeft="@dimen/dimens_15dp"
                android:visibility="visible">

                <com.heiheilianzai.app.view.ProgressBarView
                    android:id="@+id/materialSeekBar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_20dp"
                    android:visibility="gone"
                    />

                <LinearLayout
                    android:id="@+id/dialog_updateapp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_35dp"
                    android:layout_marginTop="@dimen/dimens_5dp"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/dialog_updateapp_no"
                        android:layout_width="@dimen/dimens_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_sol_ffffff_cor_50_str_1_ff5349"
                        android:gravity="center"
                        android:text="@string/MainActivity_holdon"
                        android:textColor="@color/color_ff5349" />

                    <View
                        android:id="@+id/dialog_updateapp_view"
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_1dp" />

                    <TextView
                        android:id="@+id/dialog_updateapp_yes"
                        android:layout_width="@dimen/dimens_0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@drawable/shape_update_blue"
                        android:gravity="center"
                        android:text="@string/MainActivity_nowupdate"
                        android:textColor="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>