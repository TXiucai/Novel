<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_60000000">

    <LinearLayout
        android:layout_width="@dimen/dimens_265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/home_notice_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/shape_home_notice_bg"
            android:minHeight="@dimen/dimens_100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginTop="@dimen/dimens_7dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/fileSearcherBlack"
                android:textSize="@dimen/dimens_18dp" />

            <TextView
                android:id="@+id/home_notice_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:layout_marginBottom="@dimen/dimens_20dp"
                android:lineSpacingExtra="@dimen/dimens_2dp"
                android:minHeight="@dimen/dimens_100dp"
                android:textColor="@color/nightColorPrimary"
                android:textSize="@dimen/dimens_14dp" />
        </LinearLayout>

        <View
            android:id="@+id/home_notice_close"
            android:layout_width="@dimen/dimens_25dp"
            android:layout_height="@dimen/dimens_25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_25dp"
            android:background="@mipmap/ic_home_notice_close" />
    </LinearLayout>
</RelativeLayout>