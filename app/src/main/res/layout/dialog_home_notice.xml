<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_60000000">

    <LinearLayout
        android:layout_width="@dimen/dimens_265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_90dp"
            android:scaleType="fitXY"
            android:src="@mipmap/home_notice_top_bg" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/shape_home_notice_bg"
            android:orientation="vertical">

            <TextView
                android:id="@+id/home_notice_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginTop="@dimen/public_14_dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:gravity="center_horizontal"
                android:singleLine="true"
                android:textColor="@color/color_1a1a1a"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/home_notice_content"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_165dp"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginTop="@dimen/public_14_dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:lineSpacingExtra="@dimen/dimens_2dp"
                android:scrollbars="vertical"
                android:textColor="@color/color_4c4c4c"
                android:textSize="12sp" />

            <LinearLayout
                android:id="@+id/ll_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_36dp"
                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginRight="@dimen/dimens_20dp"
                android:layout_marginBottom="@dimen/dimens_16dp"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tx_pre"
                    android:layout_width="@dimen/dimens_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@drawable/shape_f6f6f6_20"
                    android:gravity="center"
                    android:text="@string/string_pre"
                    android:textColor="@color/color_ff8350"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tx_last"
                    android:layout_width="@dimen/dimens_0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimens_14dp"
                    android:layout_weight="1"
                    android:background="@drawable/shape_f6f6f6_20"
                    android:gravity="center"
                    android:text="@string/string_last"
                    android:textColor="@color/color_ff8350"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/home_notice_close"
            android:layout_width="@dimen/dimens_25dp"
            android:layout_height="@dimen/dimens_25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_25dp"
            android:background="@mipmap/ic_home_notice_close" />
    </LinearLayout>
</RelativeLayout>