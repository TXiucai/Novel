<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_32dp">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_10dp"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/dimens_5dp"
            android:layout_marginEnd="@dimen/dimens_5dp"
            android:background="@color/black"
            android:foregroundGravity="center_vertical" />

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@null"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rb_shengdiao_01"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_02"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_03"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_04"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="true"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_05"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_06"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_07"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

            <RadioButton
                android:id="@+id/rb_shengdiao_08"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:button="@drawable/rb_bg_event_selector"
                android:checked="false"
                android:gravity="center" />

        </RadioGroup>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_18dp"
        android:background="@null"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/rb_yingdiao_11"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center" />

        <TextView
            android:id="@+id/rb_yingdiao_12"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_0_5" />

        <TextView
            android:id="@+id/rb_yingdiao_13"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_0_75" />

        <TextView
            android:id="@+id/rb_yingdiao_14"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:textColor="@color/red"
            android:text="@string/read_activity_read_1" />

        <TextView
            android:id="@+id/rb_yingdiao_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_1_25" />

        <TextView
            android:id="@+id/rb_yingdiao_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_1_5" />

        <TextView
            android:id="@+id/rb_yingdiao_17"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_1_75" />

        <TextView
            android:id="@+id/rb_yingdiao_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:gravity="center"
            android:text="@string/read_activity_read_2" />

    </LinearLayout>

</LinearLayout>