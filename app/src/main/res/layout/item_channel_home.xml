<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tx_channel"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_25dp"
        android:gravity="bottom"
        android:paddingLeft="@dimen/dimens_20dp"
        android:paddingRight="@dimen/dimens_20dp"
        android:textColor="@color/color_1a1a1a"
        android:textSize="14sp" />

    <View
        android:id="@+id/img_background"
        android:layout_width="@dimen/dimens_30dp"
        android:layout_height="@dimen/dimens_8dp"
        android:layout_alignBottom="@id/tx_channel"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginBottom="@dimen/dimens_3dp"
        android:background="@mipmap/channel_selected" />
</RelativeLayout>