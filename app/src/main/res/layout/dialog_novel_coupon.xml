<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:ignore="NamespaceTypo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dimens_15dp"
        android:background="@drawable/shape_ffffff_20"
        android:orientation="vertical"
        android:paddingLeft="@dimen/dimens_15dp"
        android:paddingRight="@dimen/dimens_15dp">

        <TextView
            android:id="@+id/dialog_updateapp_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_50dp"
            android:gravity="center"
            android:text="@string/dialog_tittle_novel_coupon"
            android:textColor="@color/color_444444"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_36dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:background="@drawable/shape_f6f6f6_20"
            android:gravity="center"
            android:paddingLeft="@dimen/dimens_25dp"
            android:paddingRight="@dimen/dimens_25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/string_dialog_coupon_total"
                android:textColor="@color/color_9a9a9a"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/dialog_coupon_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/color_ff8350"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/dialog_coupon_open"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:text="@string/dialog_coupon_open"
            android:textColor="@color/color_1a1a1a"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_open_text"
                android:textColor="@color/color_9a9a9a"
                android:textSize="16sp" />

            <com.zcw.togglebutton.ToggleButton
                android:id="@+id/tb_open"
                android:layout_width="@dimen/dimens_38dp"
                android:layout_height="@dimen/dimens_20dp"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_marginRight="@dimen/dp_10"
                toggle:tbBorderWidth="1dp"
                toggle:tbOffBorderColor="@color/gray"
                toggle:tbOffColor="@color/gray"
                toggle:tbOnColor="@color/mainColor2" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:layout_marginRight="@dimen/dimens_15dp"
            android:layout_marginBottom="@dimen/dimens_24dp"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:orientation="horizontal"
                android:visibility="visible">

                <TextView
                    android:id="@+id/dialog_no"
                    android:layout_width="@dimen/dimens_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/shape_sol_ffffff_cor_50_str_1_ff5349"
                    android:gravity="center"
                    android:text="@string/dialog_close_vip"
                    android:textColor="@color/color_ff5349" />

                <View
                    android:id="@+id/dialog_updateapp_view"
                    android:layout_width="@dimen/dimens_15dp"
                    android:layout_height="@dimen/dimens_1dp" />

                <TextView
                    android:id="@+id/dialog_yes"
                    android:layout_width="@dimen/dimens_0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:background="@drawable/shape_update_blue"
                    android:gravity="center"
                    android:text="@string/AcquireBaoyueActivity_title_gold"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>