<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vitualkey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/common_titlebar"
        layout="@layout/common_titlebar" />

    <ListView
        android:id="@+id/activity_comment_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/common_titlebar"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="@drawable/selector_listview_item">

    </ListView>

    <LinearLayout
        android:id="@+id/activity_mine_comment_list_listview_noresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="110dp"
            android:background="@mipmap/no_data"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/CommentListActivity_nopinglun"
            android:textColor="@color/gray"
            android:textSize="@dimen/public_12_dp"

            />
    </LinearLayout>

</RelativeLayout>
