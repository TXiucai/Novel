<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_titlebar_add_comment" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_210dp"
            android:background="@mipmap/yaoqing" />

        <LinearLayout
            android:id="@+id/qr_code_layout"
            android:layout_width="@dimen/dimens_180dp"
            android:layout_height="206dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimens_15dp"
            android:background="@color/white"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/qr_code_img"
                android:layout_width="@dimen/dimens_148dp"
                android:layout_height="@dimen/dimens_148dp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimens_15dp"
                android:scaleType="centerCrop" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/dimens_10dp"
                android:layout_marginBottom="@dimen/dp_10">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/share_code"
                    android:textColor="@color/black"
                    android:textSize="@dimen/dimens_16sp" />

                <TextView
                    android:id="@+id/tv_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:layout_toRightOf="@id/tv_name"
                    android:textColor="@color/color_F82658"
                    android:textSize="@dimen/dimens_16sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_68dp"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:paddingLeft="@dimen/dimens_32dp"
            android:paddingTop="@dimen/dimens_14dp"
            android:paddingRight="@dimen/dimens_32dp"
            android:paddingBottom="@dimen/dimens_14dp">

            <TextView
                android:id="@+id/tv_link"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/dimens_14sp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_42dp"
            android:layout_marginLeft="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:layout_marginRight="@dimen/dimens_20dp">

            <TextView
                android:id="@+id/share_save"
                android:layout_width="@dimen/dimens_140dp"
                android:layout_height="match_parent"
                android:background="@drawable/selector_shape_save"
                android:gravity="center"
                android:text="@string/save_or_share_pic"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_16dp" />

            <TextView
                android:id="@+id/share_copy"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/selector_shape_save"
                android:gravity="center"
                android:text="@string/copy_or_share_link"
                android:textColor="@color/white"
                android:textSize="@dimen/dimens_16dp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_shareNum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_30dp"
            android:gravity="center_horizontal"
            android:text="@string/share_friend"
            android:textColor="@color/color_F82658"
            android:textSize="@dimen/dimens_16sp" />

        <LinearLayout
            android:layout_width="@dimen/dimens_345dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dimens_20dp"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/dimens_16dp">

            <TextView
                android:id="@+id/tv_share_rule"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/share_rule1"
                android:textColor="@color/color_1a1a1a"
                android:textSize="@dimen/dimens_14sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>