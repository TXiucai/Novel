<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="@dimen/dimens_250dp"
        android:layout_height="@dimen/dimens_200dp"
        android:layout_gravity="center_horizontal"
        android:src="@mipmap/dialog_vip_wake_error" />

    <TextView
        android:id="@+id/dialog_again"
        android:layout_width="@dimen/dimens_250dp"
        android:layout_height="@dimen/dimens_38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="-15dp"
        android:background="@drawable/shape_ff8350_20"
        android:gravity="center"
        android:text="@string/vip_error"
        android:textColor="@color/white" />
</LinearLayout>