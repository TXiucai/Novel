<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/activity_splash_im"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        />

    <TextView
        android:id="@+id/activity_home_viewpager_sex_next"
        android:layout_width="@dimen/dimens_88dp"
        android:layout_height="@dimen/dimens_34dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:layout_marginRight="@dimen/dimens_30dp"
        android:background="@drawable/shape_skip"
        android:gravity="center"
        android:padding="@dimen/dimens_5dp"
        android:textColor="@color/gray1"
        android:textSize="@dimen/dimens_15dp"
        android:visibility="gone" />
</RelativeLayout>