<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/liem_store_comic_style1_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/liem_store_comic_style1_img"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_comic_def" />

            <ImageView
                android:layout_width="@dimen/dimens_34dp"
                android:layout_height="@dimen/dimens_34dp"
                android:layout_gravity="center"
                android:src="@mipmap/ic_stop" />

            <TextView
                android:id="@+id/liem_store_comic_style1_flag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:background="#1Af7f8f9"
                android:gravity="right"
                android:textColor="@color/white"
                android:textSize="@dimen/public_10_dp"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/liem_store_comic_style1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="@dimen/public_12_dp" />

        <TextView
            android:id="@+id/liem_store_comic_style1_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/gray"
            android:textSize="@dimen/public_11_dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_store_corner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_16dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_marginRight="@dimen/dimens_5dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dimens_6dp"
        android:paddingRight="@dimen/dimens_6dp"
        android:textColor="@color/white"
        android:textSize="10sp" />
</RelativeLayout>
