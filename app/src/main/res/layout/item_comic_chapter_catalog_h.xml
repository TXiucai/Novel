<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_comicchaptercatalog_current_bg"
    android:layout_width="@dimen/dimens_110dp"
    android:layout_height="@dimen/dimens_90dp"
    android:layout_gravity="center_vertical"
    android:layout_marginRight="@dimen/dimens_10dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="@dimen/dimens_110dp"
        android:layout_height="@dimen/dimens_60dp"
        android:layout_gravity="center_vertical">

        <RelativeLayout
            android:id="@+id/item_comicchaptercatalog_needbuy"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/item_comicchaptercatalog_img"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/comic_coupon_bg" />

            <ImageView
                android:id="@+id/item_comic_chapter_lock"
                android:layout_width="@dimen/dimens_22dp"
                android:layout_height="@dimen/dimens_22dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/comic_lock" />
        </RelativeLayout>
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_f6f6f6"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_comicchaptercatalog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_9a9a9a"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_chapter_catalog_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/color_9a9a9a"
            android:textSize="9sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lightgray2" />
</LinearLayout>
