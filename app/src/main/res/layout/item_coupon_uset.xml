<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_74dp"
    android:layout_marginLeft="@dimen/dimens_15dp"
    android:layout_marginRight="@dimen/dimens_15dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_coupon_tittle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_coupon_day"
            android:textColor="@color/color_1a1a1a"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/item_coupon_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_2dp"
            android:text="@string/string_coupon_all"
            android:textColor="@color/color_9a9a9a"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/item_coupon_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_2dp"
            android:text="@string/string_coupon_all"
            android:textColor="@color/color_666666"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_coupon_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:text="@string/string_coupon_all"
        android:textColor="@color/color_ff8350"
        android:textSize="12sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/color_f7f7f7" />
</RelativeLayout>