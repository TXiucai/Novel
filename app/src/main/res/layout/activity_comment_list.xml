<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vitualkey"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    >

    <include layout="@layout/common_titlebar" />

    <ListView
        android:id="@+id/activity_comment_list_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:layout_marginBottom="50dp"
        android:background="@color/white"
        android:divider="@null"
        android:listSelector="@drawable/selector_listview_item">

    </ListView>

    <LinearLayout
        android:id="@+id/activity_comment_list_listview_noresult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginTop="110dp"
            android:background="@mipmap/no_data"
            android:scaleType="centerCrop" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal"
            android:text="@string/CommentListActivity_nopinglun"
            android:textColor="@color/gray"
            android:textSize="@dimen/public_12_dp"

            />
    </LinearLayout>


    <TextView
        android:id="@+id/activity_comment_list_add_comment"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:height="50dp"
        android:background="@drawable/shape_activity_bottom"
        android:gravity="center"
        android:text="@string/BookInfoActivity_xieshuping"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/public_12_dp" />


</RelativeLayout>
