<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rl_vip_item"
        android:layout_width="@dimen/dimens_90dp"
        android:layout_height="@dimen/dimens_110dp"
        android:layout_marginRight="@dimen/dimens_12dp"
        android:background="@drawable/shape_e6e6e6_10">

        <TextView
            android:id="@+id/tx_vip_flag"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimens_14dp"
            android:layout_marginTop="-7dp"
            android:gravity="center"
            android:paddingLeft="@dimen/dimens_8dp"
            android:paddingRight="@dimen/dimens_8dp"
            android:textColor="@color/white"
            android:textSize="10sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_marginTop="@dimen/dimens_15dp"
                android:id="@+id/tx_vip_tittle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_35363b"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Â¥"
                    android:textColor="@color/color_d68547"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tx_vip_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/color_d68547"
                    android:textSize="28sp" />
            </LinearLayout>

            <TextView
                android:layout_weight="1"
                android:id="@+id/tx_vip_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_5dp"
                android:layout_marginRight="@dimen/dimens_5dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/color_a9a9a9"
                android:textSize="12sp" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
