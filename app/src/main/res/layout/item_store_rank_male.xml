<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="120dp"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="10dp">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ImageView
            android:id="@+id/item_store_rank_male_img_3"
            android:layout_width="95dp"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/defaultimg"
            />

        <ImageView
            android:id="@+id/item_store_rank_male_img_2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/defaultimg"
            />

        <ImageView
            android:id="@+id/item_store_rank_male_img_1"
            android:layout_width="60dp"
            android:layout_height="95dp"
            android:layout_alignParentBottom="true"
            android:scaleType="centerCrop"
            android:background="@mipmap/defaultimg"
            />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/item_store_rank_male_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="aaaaaaaa"
            android:textColor="@color/black"
            android:textSize="@dimen/public_12_dp"/>

        <TextView
            android:id="@+id/item_store_rank_male_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="aaaaaaaa"
            android:layout_marginTop="10dp"
            android:textColor="@color/gray"
            android:textSize="@dimen/public_10_dp"/>

    </LinearLayout>


</LinearLayout>