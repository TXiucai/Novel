<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/listview_taskcenter_tasktype_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="3dp"
                android:layout_height="13dp"
                android:layout_gravity="center_vertical"

                android:layout_marginTop="2dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/shape_task_item" />

            <TextView
                android:id="@+id/listview_taskcenter_tasktype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="日常任务"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/lightgray2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listview_taskcenter_task_labe"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="日常任务"
                    android:textColor="@color/black"
                    android:textSize="@dimen/public_14_dp" />

                <TextView
                    android:id="@+id/listview_taskcenter_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:text="日常任务"
                    android:textColor="#FF5722"
                    android:textSize="@dimen/public_10_dp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/listview_taskcenter_task_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="日常任务"
                android:textColor="@color/gray"
                android:textSize="@dimen/public_12_dp" />

        </LinearLayout>


        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/listview_taskcenter_status"
            android:layout_width="50dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="25dp"
            android:background="@drawable/shape_taskcenter_green"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/white"
            android:textSize="@dimen/public_11_dp" />
    </LinearLayout>



</LinearLayout>