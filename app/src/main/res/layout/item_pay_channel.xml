<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_layout"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:paddingLeft="5dp"
    android:background="@drawable/shape_white_00a0e8_5">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/pay_icon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:background="@mipmap/weixin"
        android:layout_marginLeft="4dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="6dp"
        android:layout_toRightOf="@+id/pay_icon"
        android:layout_toLeftOf="@+id/paytype_img"
        android:layout_marginRight="4dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PayActivity_weixin"
            android:textColor="#000000"
            android:textSize="13dp"
            android:singleLine="true"
            />
    </LinearLayout>

    <ImageView
        android:id="@+id/paytype_img"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@mipmap/pay_unselected" />

    </RelativeLayout>