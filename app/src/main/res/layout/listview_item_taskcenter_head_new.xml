<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/TaskCenterActivity_lianxuday"

                android:textColor="@color/black"
                android:textSize="@dimen/public_15_dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/activity_taskcenter_lianxuday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/shape_task_bg"
                android:paddingLeft="7dp"
                android:paddingRight="7dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/TaskCenterActivity_lianxuday_day"
                android:textColor="@color/black"
                android:textSize="@dimen/public_15_dp"
                android:textStyle="bold" />
        </LinearLayout>

        <ImageView
            android:id="@+id/activity_taskcenter_sign"
            android:layout_width="110dp"
            android:layout_height="110dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
         />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/TaskCenterActivity_lianxuday_lianxureward"
                android:textColor="@color/gray3"
                android:textSize="@dimen/public_11_dp" />

            <TextView
                android:id="@+id/activity_taskcenter_getshuquan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="3书券"
                android:textColor="#FF9800"
                android:textSize="@dimen/public_11_dp" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>