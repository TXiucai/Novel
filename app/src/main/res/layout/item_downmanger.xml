<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <HorizontalScrollView
        android:id="@+id/item_dowmmanger_HorizontalScrollView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:scrollbars="none">

        <LinearLayout
            android:id="@+id/item_dowmmanger_LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/recyclerview_item_readhistory_check_rl"
                android:layout_width="@dimen/dimens_54dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:visibility="gone">

                <CheckBox
                    android:id="@+id/recyclerview_item_readhistory_check"
                    android:layout_width="@dimen/dimens_16dp"
                    android:layout_height="@dimen/dimens_16dp"
                    android:button="@drawable/selector_history_checkbox"
                    android:clickable="false"
                    android:gravity="center" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/item_dowmmanger_LinearLayout2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/item_dowmmanger_cover"
                    android:layout_width="60dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"

                    />

                <TextView
                    android:id="@+id/item_dowmmanger_name"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/public_14_dp" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/item_dowmmanger_open"
                    android:layout_width="36dp"
                    android:layout_height="match_parent"
                    android:layout_marginRight="35dp"
                    android:gravity="center_vertical"
                    android:text="@string/BookInfoActivity_down_open"
                    android:textColor="@color/mainColor"
                    android:textSize="@dimen/public_13_dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/item_dowmmanger_delete"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:background="@color/red"
                android:gravity="center"
                android:text="@string/BookInfoActivity_down_delete"
                android:textColor="@color/white"
                android:textSize="@dimen/public_13_dp" />
        </LinearLayout>

    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:background="@color/lightgray1" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:paddingLeft="15dp"
        android:paddingRight="35dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:textColor="@color/black"
                android:textSize="@dimen/public_12_dp" />

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dowmmanger_Downoption_title"
                android:layout_marginTop="6dp"
                android:gravity="center"

                android:textColor="@color/gray3"
                android:textSize="@dimen/public_12_dp" />

            <TextView
                android:id="@+id/item_dowmmanger_Downoption_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_dowmmanger_Downoption_title"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="6dp"
                android:layout_toRightOf="@+id/item_dowmmanger_Downoption_date"
                android:gravity="center"

                android:textColor="@color/gray3"
                android:textSize="@dimen/public_12_dp" />


            <TextView
                android:id="@+id/item_dowmmanger_Downoption_yixizai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="6dp"
                android:gravity="center"
                android:text="@string/BookInfoActivity_down_yixiazai"
                android:textColor="@color/gray3"
                android:textSize="@dimen/public_12_dp" />
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>