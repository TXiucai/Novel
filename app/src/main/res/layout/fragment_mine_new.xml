<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.heiheilianzai.app.view.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/color_ff8350"
                android:orientation="vertical"
                android:paddingBottom="@dimen/dimens_28dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_44dp"
                    android:layout_marginTop="@dimen/dimens_50dp">

                    <ImageView
                        android:id="@+id/fragment_mine_user_info_tasklayout_set"
                        android:layout_width="@dimen/dimens_22dp"
                        android:layout_height="@dimen/dimens_22dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="@dimen/dimens_30dp"
                        android:src="@mipmap/mine_setting_icon" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_68dp"
                    android:orientation="horizontal"
                    android:paddingLeft="@dimen/dimens_15dp"
                    android:paddingRight="@dimen/dimens_15dp">

                    <RelativeLayout
                        android:layout_width="@dimen/dimens_68dp"
                        android:layout_height="match_parent">

                        <com.heiheilianzai.app.view.CircleImageView
                            android:id="@+id/fragment_mine_user_info_avatar"
                            android:layout_width="@dimen/dimens_68dp"
                            android:layout_height="@dimen/dimens_68dp"
                            android:src="@mipmap/icon_def_head" />

                        <ImageView
                            android:id="@+id/fragment_mine_user_info_sex"
                            android:layout_width="@dimen/dimens_25dp"
                            android:layout_height="@dimen/dimens_25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/ic_sex_unknow_selected"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_68dp"
                        android:layout_marginLeft="@dimen/dimens_12dp"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/fragment_mine_user_info_nickname"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="true"
                                android:maxLength="7"
                                android:text="@string/user_login"
                                android:textColor="@color/white"
                                android:textSize="18sp" />

                            <ImageView
                                android:id="@+id/fragment_mine_user_info_isvip"
                                android:layout_width="@dimen/dimens_18dp"
                                android:layout_height="@dimen/dimens_18dp"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="@dimen/dimens_6dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_isvip" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/fragment_mine_user_info_id"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/fragment_mine_user_info_tip"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:text="@string/string_mine_no_login_tip"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_money_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_60dp"
                    android:layout_marginTop="@dimen/dimens_5dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:id="@+id/fragment_mine_user_info_gold_layout"
                        android:layout_width="@dimen/dimens_0dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_mine_user_info_gold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/fragment_mine_user_info_gold_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="书币余额"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_mine_user_info_tasklayout_layout"
                        android:layout_width="@dimen/dimens_0dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_mine_user_info_tasklayout_task"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/MineNewFragment_fuli"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/fragment_mine_user_info_shuquan_layout"
                        android:layout_width="@dimen/dimens_0dp"
                        android:layout_height="@dimen/dimens_50dp"
                        android:layout_alignParentRight="true"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/fragment_mine_user_info_shuquan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:text="--"
                            android:textColor="@color/white"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/fragment_mine_user_info_shuquan_unit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="书券余额"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_56dp"
                android:layout_marginLeft="@dimen/dimens_15dp"
                android:layout_marginTop="-28dp"
                android:layout_marginRight="@dimen/dimens_15dp"
                android:background="@mipmap/mine_vip_bg"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/dimens_15dp"
                android:paddingRight="@dimen/dimens_15dp">


                <ImageView
                    android:layout_width="@dimen/dimens_34dp"
                    android:layout_height="@dimen/dimens_34dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:src="@mipmap/mine_vip_icon" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimens_12dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:text="@string/mine_vip_tittle"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="italic|bold" />


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="@string/mine_vip_tip"
                        android:textColor="@color/color_fdd59d"
                        android:textSize="12sp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/fragment_mine_user_info_paylayout_vip"
                    android:layout_width="@dimen/dimens_80dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:background="@drawable/shape_start_bg"
                    android:gravity="center"
                    android:text="@string/mine_vip_open"
                    android:textColor="@color/white"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_announce_layout"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_30dp"
                android:layout_marginLeft="@dimen/dimens_15dp"
                android:layout_marginTop="@dimen/dimens_20dp"
                android:layout_marginRight="@dimen/dimens_15dp"
                android:layout_marginBottom="@dimen/dimens_10dp"
                android:background="@drawable/shape_announce"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="@dimen/dimens_12dp"
                    android:layout_height="@dimen/dimens_12dp"
                    android:layout_marginLeft="@dimen/dimens_20dp"
                    android:background="@mipmap/mine_announce_icon" />

                <com.heiheilianzai.app.view.MarqueeTextView
                    android:id="@+id/fragment_mine_marquee"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_25dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_paylayout_downmanager"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/icon_novel_down" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/BookInfoActivity_down_manger"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_paylayout_history"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/mine_history_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/noverfragment_yuedulishi"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_mybookcomment"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/mine_comment_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_shuping"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_friends"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/mine_share_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_friend"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_feedback"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/mine_oppint_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_fankui"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_taskcenter"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/mine_gift_icon" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_fulitask"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/fragment_sign_invite_code"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/string_sign_invite_code"
                        android:textColor="@color/color_ff8350"
                        android:textSize="9sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_share"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/ic_home_share" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_share"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_paylayout_recharge"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/dimens_70dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <ImageView
                        android:layout_width="@dimen/dimens_25dp"
                        android:layout_height="@dimen/dimens_25dp"
                        android:src="@mipmap/ic_shubi" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_6dp"
                        android:text="@string/MineNewFragment_chongzhi"
                        android:textColor="@color/color_35363b"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </com.heiheilianzai.app.view.ObservableScrollView>
</LinearLayout>