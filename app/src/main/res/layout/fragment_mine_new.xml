<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <com.heiheilianzai.app.view.ObservableScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_marginTop="50dp"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="30dp">

                    <RelativeLayout
                        android:layout_width="80dp"
                        android:layout_height="match_parent">

                        <com.heiheilianzai.app.view.CircleImageView
                            android:id="@+id/fragment_mine_user_info_avatar"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@mipmap/icon_def_head" />

                        <ImageView
                            android:id="@+id/fragment_mine_user_info_sex"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:src="@mipmap/ic_sex_unknow_selected"
                            android:visibility="gone" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <TextView
                            android:id="@+id/fragment_mine_user_info_nickname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="true"
                            android:maxLength="7"
                            android:text="@string/user_login"
                            android:textColor="@color/black"
                            android:textSize="28dp" />

                        <LinearLayout
                            android:id="@+id/fragment_mine_user_info_nologin"
                            android:layout_width="wrap_content"
                            android:layout_height="24dp"
                            android:orientation="horizontal"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/fragment_mine_user_info_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_vertical"
                                android:text="ID:1111"
                                android:textColor="@color/gray"
                                android:textSize="@dimen/public_14_dp" />

                            <ImageView
                                android:id="@+id/fragment_mine_user_info_isvip"
                                android:layout_width="110px"
                                android:layout_height="38px"
                                android:layout_gravity="center_vertical"
                                android:layout_marginLeft="15dp"
                                android:scaleType="centerCrop"
                                android:src="@mipmap/icon_isvip" />
                        </LinearLayout>

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />
                    </LinearLayout>
                </LinearLayout>


            </RelativeLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_user_info_money_layout"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical">

                <RelativeLayout
                    android:id="@+id/fragment_mine_user_info_gold_layout"
                    android:layout_width="0dp"
                    android:layout_height="50dp"

                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fragment_mine_user_info_gold_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="书币余额"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/public_13_dp" />

                    <TextView
                        android:id="@+id/fragment_mine_user_info_gold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />


                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"

                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lightgray2" />

                <RelativeLayout
                    android:id="@+id/fragment_mine_user_info_tasklayout_layout"
                    android:layout_width="0dp"
                    android:layout_height="50dp"

                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fragment_mine_user_info_tasklayout_task"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="@string/MineNewFragment_fuli"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/public_13_dp" />
                </RelativeLayout>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@color/lightgray2" />

                <RelativeLayout
                    android:id="@+id/fragment_mine_user_info_shuquan_layout"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_alignParentRight="true"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/fragment_mine_user_info_shuquan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="--"
                        android:textColor="@color/mainColor"
                        android:textSize="16dp" />

                    <TextView
                        android:id="@+id/fragment_mine_user_info_shuquan_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:text="书券余额"
                        android:textColor="@color/gray"
                        android:textSize="@dimen/public_13_dp" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/fragment_mine_user_info_paylayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <View
                    android:id="@+id/fragment_mine_user_info_paylayout_view"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:background="@color/lightgray2" />

                <LinearLayout
                    android:id="@+id/fragment_mine_user_info_paylayout_recharge"
