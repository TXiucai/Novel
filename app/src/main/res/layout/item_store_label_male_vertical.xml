<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">


    <LinearLayout
        android:id="@+id/item_store_label_male_vertical_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/item_store_label_male_vertical_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/item_store_label_male_vertical_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/item_store_label_male_vertical_text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:lines="1"
            android:textColor="@color/color_666666"
            android:textSize="11sp"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/item_store_corner"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_16dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_marginRight="@dimen/dimens_5dp"
        android:gravity="center"
        android:paddingLeft="@dimen/dimens_6dp"
        android:paddingRight="@dimen/dimens_6dp"
        android:textColor="@color/white"
        android:textSize="10sp" />

</RelativeLayout>