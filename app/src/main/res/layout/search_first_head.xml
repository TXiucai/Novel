<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ry_search_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginRight="@dimen/dimens_15dp" />

    <LinearLayout
        android:id="@+id/ll_fold"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_45dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tx_fold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/string_fold"
            android:textColor="@color/color_3b3b3b"
            android:textSize="10sp" />

        <ImageView
            android:id="@+id/img_fold"
            android:layout_width="@dimen/dimens_8dp"
            android:layout_height="@dimen/dimens_8dp"
            android:layout_marginLeft="@dimen/dp_4"
            android:src="@mipmap/fold_down" />

    </LinearLayout>
</RelativeLayout>