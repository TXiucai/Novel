<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@color/white"
    android:padding="20dp">

    <LinearLayout
        android:id="@+id/activity_login_phone_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="51dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_code"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="+86"
                    android:textColor="@color/login_black"
                    android:textSize="16sp" />

                <ImageView
                    android:layout_width="@dimen/dimens_10dp"
                    android:layout_height="@dimen/dimens_10dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimens_5dp"
                    android:src="@mipmap/login_down" />

                <View
                    android:layout_width="@dimen/dimens_1dp"
                    android:layout_height="@dimen/dimens_12dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimens_8dp"
                    android:layout_marginRight="@dimen/dimens_8dp"
                    android:background="@color/login_gray" />

                <EditText
                    android:id="@+id/activity_login_phone_username"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginBottom="1dp"
                    android:background="@null"
                    android:hint="@string/UserInfoActivity_phone"
                    android:inputType="phone"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:textColorHint="@color/login_input_tip"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:id="@+id/activity_login_phone_clear"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/login_close"
                    android:visibility="gone" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="@color/lightgray2" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <EditText
                    android:id="@+id/activity_login_phone_message"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="@string/LoginActivity_code"
                    android:inputType="number"
                    android:textColorHint="@color/login_input_tip"
                    android:textSize="@dimen/public_12_dp" />

                <Button
                    android:id="@+id/activity_login_phone_get_message_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:text="@string/LoginActivity_getcode"
                    android:textColor="@color/login_input_tip"
                    android:textSize="@dimen/public_12_dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/lightgray2" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/activity_login_phone_btn"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@id/activity_login_phone_container"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_login_bg"
        android:text="@string/LoginActivity_denglu"
        android:textColor="@color/gray"
        android:textSize="@dimen/public_12_dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="10dp"
        android:text="账号密码登录"
        android:textColor="@color/skyblue"
        android:textSize="@dimen/public_10_dp"
        android:visibility="gone" />
</RelativeLayout>
