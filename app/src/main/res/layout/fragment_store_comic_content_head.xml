<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_310dp">

        <com.heiheilianzai.app.view.ConvenientBanner
            android:id="@+id/store_banner_male"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/dimens_2dp"
            app:canLoop="true" />

        <ImageView
            android:id="@+id/store_banner_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_25dp"
            android:layout_gravity="bottom"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@mipmap/banner_bottom_line" />
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ry_recommend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/dimens_15dp"
        android:paddingRight="@dimen/dimens_15dp" />
</LinearLayout>
