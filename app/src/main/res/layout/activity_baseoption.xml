<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vitualkey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_titlebar" />

        <LinearLayout
            android:id="@+id/top_channel_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <include layout="@layout/channel_bar2" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_1dp"
                android:background="@color/color_F5F5F5" />

        </LinearLayout>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/activity_baseoption_viewpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <TextView
        android:id="@+id/activity_baseoption_edit"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dimens_50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:gravity="center"
        android:text="@string/string_edit"
        android:visibility="gone"/>

</RelativeLayout>