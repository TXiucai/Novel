<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="6dp"
    android:paddingRight="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:src="@mipmap/store_labe" />

        <TextView
            android:id="@+id/fragment_store_gridview3_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="3dp"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/fragment_discovery_daojishi_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="gone">

            <TextView
                android:id="@+id/fragment_discovery_daojishi_hh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_enable_bg2"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="@dimen/public_11_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/public_11_dp" />

            <TextView
                android:id="@+id/fragment_discovery_daojishi_mm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_enable_bg2"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="@dimen/public_11_dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textColor="@color/black"
                android:textSize="@dimen/public_11_dp" />

            <TextView
                android:id="@+id/fragment_discovery_daojishi_ss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_login_enable_bg2"
                android:paddingLeft="5dp"
                android:paddingTop="2dp"
                android:paddingRight="5dp"
                android:paddingBottom="2dp"
                android:text="00"
                android:textColor="@color/white"
                android:textSize="@dimen/public_11_dp" />
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="5dp"
            android:layout_weight="1" />

        <RelativeLayout
            android:id="@+id/fragment_discovery_daojishi_end"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:background="@drawable/shape_login_enable_bg2"
            android:visibility="gone">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="@string/Discover_end"
                android:textColor="@color/white"
                android:textSize="@dimen/public_10_dp" />
        </RelativeLayout>
    </LinearLayout>

    <com.heiheilianzai.app.view.AdaptionGridView
        android:id="@+id/fragment_store_gridview3_gridview_fore"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:numColumns="1"
        android:visibility="gone" />

    <com.heiheilianzai.app.view.AdaptionGridView
        android:id="@+id/fragment_store_gridview3_gridview_first"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:numColumns="3" />

    <com.heiheilianzai.app.view.AdaptionGridView
        android:id="@+id/fragment_store_gridview3_gridview_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center"
        android:numColumns="1"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_36dp"
        android:layout_marginTop="@dimen/dimens_5dp"
        android:layout_marginBottom="@dimen/dimens_5dp"
        android:background="@color/white"
        android:orientation="horizontal">

        <View
            android:id="@+id/fragment_store_gridview1_view1"
            android:layout_width="20dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/fragment_store_gridview1_more"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_f6f6f6_20"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/comic_mall_more" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/storeFragment_more"
                android:textColor="@color/color_c0c0c0"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/fragment_store_gridview1_view2"
            android:layout_width="20dp"
            android:layout_height="1dp" />

        <LinearLayout
            android:id="@+id/fragment_store_gridview_huanyihuan"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="@drawable/shape_f6f6f6_20"
            android:orientation="horizontal">

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:src="@mipmap/comic_mall_refresh" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/storeFragment_huanyihuan"
                android:textColor="@color/color_c0c0c0"
                android:textSize="14sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <View
            android:id="@+id/fragment_store_gridview1_view3"
            android:layout_width="20dp"
            android:layout_height="1dp" />

    </LinearLayout>
</LinearLayout>
