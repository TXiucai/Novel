<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_main_vitualkey"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/lightgray2"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/book_info_titlebar_container"
            android:paddingTop="@dimen/dimens_30dp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_70dp"
            android:background="@color/black">

            <LinearLayout
                android:id="@+id/titlebar_back"
                android:layout_width="@dimen/dimens_80dp"
                android:layout_height="@dimen/dimens_40dp"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/dimens_10dp">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="@dimen/dimens_20dp"
                    android:layout_height="@dimen/dimens_20dp"
                    android:background="@mipmap/back_white" />
            </LinearLayout>

            <TextView
                android:id="@+id/titlebar_text"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dimens_40dp"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/color_ef966B"
                android:textSize="16sp" />
        </RelativeLayout>

        <com.heiheilianzai.app.view.ObservableScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_70dp"
                    android:background="@color/black" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_150dp"
                    android:layout_marginLeft="@dimen/dimens_15dp"
                    android:layout_marginTop="-55dp"
                    android:layout_marginRight="@dimen/dimens_15dp"
                    android:background="@mipmap/baoyue_vip_bg">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dimens_15dp"
                        android:orientation="horizontal"
                        android:padding="@dimen/dimens_10dp">

                        <com.heiheilianzai.app.view.CircleImageView
                            android:id="@+id/activity_acquire_avatar"
                            android:layout_width="@dimen/dimens_50dp"
                            android:layout_height="@dimen/dimens_50dp"
                            android:layout_marginLeft="@dimen/dimens_10dp"
                            android:src="@mipmap/hold_user_avatar" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimens_50dp"
                            android:layout_marginLeft="@dimen/dimens_10dp"
                            android:gravity="center_vertical"
                            android:orientation="vertical">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <TextView
                                    android:id="@+id/activity_acquire_avatar_name"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical"
                                    android:text="@string/BaoyueActivity_no_login"
                                    android:textColor="@color/white"
                                    android:textSize="14sp" />

                                <ImageView
                                    android:id="@+id/activity_acquire_avatar_isvip"
                                    android:visibility="gone"
                                    android:layout_width="@dimen/dimens_18dp"
                                    android:layout_height="@dimen/dimens_18dp"
                                    android:layout_gravity="center_vertical"
                                    android:layout_marginLeft="@dimen/dimens_6dp"
                                    android:scaleType="centerCrop"
                                    android:src="@mipmap/icon_isvip" />
                            </LinearLayout>

                            <TextView
                                android:id="@+id/activity_acquire_avatar_desc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/dimens_4dp"
                                android:gravity="center_vertical"
                                android:text="@string/BaoyueActivity_mianfei"
                                android:textColor="@color/color_ef966B"
                                android:textSize="12sp" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/activity_acquire_customer_service"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginTop="@dimen/dimens_25dp"
                        android:layout_marginRight="@dimen/dimens_30dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <View
                            android:layout_width="@dimen/dimens_35dp"
                            android:layout_height="@dimen/dimens_35dp"
                            android:layout_centerHorizontal="true"
                            android:background="@mipmap/ic_customer_service" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dimens_18dp"
                            android:layout_centerHorizontal="true"
                            android:background="@drawable/shape_ef966b_20"
                            android:gravity="center"
                            android:paddingLeft="@dimen/dimens_10dp"
                            android:paddingRight="@dimen/dimens_10dp"
                            android:text="联系客服"
                            android:textColor="@color/white"
                            android:textSize="10sp" />
                    </LinearLayout>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_15dp"
                    android:layout_marginTop="@dimen/dimens_20dp"
                    android:text="@string/string_baoyue_vip_tittle"
                    android:textColor="@color/color_35363b"
                    android:textSize="16sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/activity_acquire_pay_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_120dp"
                    android:layout_marginLeft="@dimen/dimens_15dp"
                    android:layout_marginTop="@dimen/dimens_10dp"
                    android:layout_marginRight="@dimen/dimens_15dp"
                    android:layout_marginBottom="@dimen/dimens_15dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dimens_10dp"
                    android:background="@color/color_f6f6f6" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/dimens_15dp"
                    android:text="@string/AcquireBaoyueActivity_fore"
                    android:textColor="@color/color_35363b"
                    android:textSize="16sp" />

                <com.heiheilianzai.app.view.AdaptionGridViewNoMargin
                    android:id="@+id/activity_acquire_privilege_gridview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:numColumns="4"
                    android:paddingBottom="@dimen/dimens_20dp" />

            </LinearLayout>
        </com.heiheilianzai.app.view.ObservableScrollView>

        <TextView
            android:id="@+id/tx_open_vip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_40dp"
            android:layout_marginLeft="@dimen/dimens_26dp"
            android:layout_marginRight="@dimen/dimens_26dp"
            android:layout_marginBottom="@dimen/dimens_30dp"
            android:background="@drawable/shape_ef966b_20"
            android:gravity="center"
            android:text="@string/mine_vip_open"
            android:textColor="@color/white"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>