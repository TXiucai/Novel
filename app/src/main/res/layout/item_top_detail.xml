<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_110dp">

    <LinearLayout
        android:id="@+id/item_store_label_male_vertical_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_88dp"
        android:layout_centerVertical="true">

        <ImageView
            android:id="@+id/item_store_label_male_horizontal_img"
            android:layout_width="@dimen/dimens_64dp"
            android:layout_height="@dimen/dimens_88dp"
            android:layout_gravity="center_vertical"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_88dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/LinearLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/item_store_label_male_horizontal_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="我真不是开玩笑"
                    android:textColor="@color/color_1a1a1a"
                    android:textSize="14sp" />

            </LinearLayout>


            <TextView
                android:id="@+id/item_store_label_male_horizontal_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/LinearLayout"
                android:layout_marginTop="@dimen/dimens_1dp"
                android:ellipsize="end"
                android:lineSpacingExtra="@dimen/dimens_1dp"
                android:lines="2"
                android:textColor="@color/color_c0c0c0"
                android:textSize="12sp" />


            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/img_type"
                        android:layout_width="@dimen/dimens_18dp"
                        android:layout_height="@dimen/dimens_18dp"
                        android:layout_marginRight="@dimen/dimens_5dp" />

                    <TextView
                        android:id="@+id/item_store_label_male_horizontal_author"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:textColor="@color/color_c0c0c0"
                        android:textSize="12sp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/item_store_label_male_horizontal_tag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/shape_announce"
                    android:paddingLeft="@dimen/dimens_10dp"
                    android:paddingTop="@dimen/dimens_3dp"
                    android:paddingRight="@dimen/dimens_10dp"
                    android:paddingBottom="@dimen/dimens_3dp"
                    android:textColor="@color/color_ff8350"
                    android:textSize="11sp" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/item_top_img"
        android:layout_width="@dimen/dimens_20dp"
        android:layout_height="@dimen/dimens_24dp"
        android:layout_marginLeft="@dimen/dimens_36dp"
        android:layout_marginTop="@dimen/dimens_11dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/gray2" />
</RelativeLayout>