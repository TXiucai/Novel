<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/activity_home_viewpager_classfy_GridView_laiout"
        android:layout_width="95dp"
        android:layout_height="127dp"
        android:layout_centerInParent="true">


        <ImageView
            android:id="@+id/activity_home_viewpager_classfy_GridView_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clickable="false"
            android:scaleType="centerCrop" />

        <CheckBox
            android:id="@+id/activity_home_viewpager_classfy_GridView_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/selector_shelf_item_checkbox"
            android:button="@null"
            android:clickable="false" />

        <TextView
            android:id="@+id/activity_home_flag"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="2dp"
            android:layout_marginRight="2dp"
            android:background="@color/red"
            android:clickable="false"
            android:gravity="center"
            android:text="@string/noverfragment_manhua"
            android:textColor="@color/white"

            />
    </RelativeLayout>
</RelativeLayout>