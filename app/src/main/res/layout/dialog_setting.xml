                    android:layout_weight="1" />

                <View
                    android:id="@+id/iv_bg_8"
                    style="@style/setting_dialog_iv"
                    android:layout_weight="1" />
            </LinearLayout>
        </HorizontalScrollView>


    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/lightgray3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">


        <LinearLayout
            android:id="@+id/auto_read_layout"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <ImageView
                android:layout_width="@dimen/dimens_18dp"
                android:layout_height="@dimen/dimens_18dp"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/auto_read_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/ReadActivity_autoread"
                android:textColor="@color/color_323334"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="@dimen/dimens_2dp"
            android:layout_height="@dimen/dimens_24dp"
            android:background="@color/lightgray3" />

        <LinearLayout
            android:id="@+id/auto_read_close_layout"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tx_open"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="5dp"
                android:gravity="center"
                android:text="@string/readActivity_more_setting"
                android:textColor="@color/color_323334"
                android:textSize="14sp" />
        </LinearLayout>

    </LinearLayout>
