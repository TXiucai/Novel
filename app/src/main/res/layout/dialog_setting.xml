<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:background="@drawable/shape_activity_read_bottom_bg"
    android:orientation="vertical">

    <Button
        android:id="@+id/tv_jianfan"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/selector_setting_dialog_font"
        android:text=""
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:text="@string/ReadActivity_zihao"
            android:textSize="@dimen/public_12_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/tv_subtract"
                android:layout_width="0dp"
                android:layout_height="30dp"

                android:layout_weight="1"
                android:background="@drawable/selector_setting_dialog_font"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/font_sub"
                    android:gravity="center"
                    android:textSize="30dp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="64"
                    android:textSize="16dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/tv_add"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_dialog_font"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@mipmap/font_add"
                    android:gravity="center"
                    android:textSize="30dp" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ReadActivity_jianju"
            android:textSize="@dimen/public_12_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:id="@+id/margin_big"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_dialog_font"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/margin_big_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@mipmap/line_spacing_big"
                    android:gravity="center" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/margin_medium"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_dialog_font"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/margin_medium_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@mipmap/line_spacing_medium"
                    android:gravity="center"
                    android:textSize="@dimen/public_12_dp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/margin_small"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:background="@drawable/selector_setting_dialog_font"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/margin_small_tv"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:background="@mipmap/line_spacing_small"
                    android:gravity="center" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/setting_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="@string/ReadActivity_fanye"
            android:textSize="@dimen/public_12_dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/tv_simulation"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ReadActivity_fangzhen"
                android:textSize="@dimen/public_12_dp" />


            <TextView
                android:id="@+id/tv_slide"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ReadActivity_huadong"
                android:textSize="@dimen/public_12_dp" />

            <TextView
                android:id="@+id/tv_cover"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ReadActivity_fugai"
                android:textSize="@dimen/public_12_dp" />

            <TextView
                android:id="@+id/tv_shangxia"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ReadActivity_shangxia"
                android:textSize="@dimen/public_12_dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_none"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/ReadActivity_wu"
                android:textSize="@dimen/public_12_dp" />
        </LinearLayout>


    </LinearLayout>


