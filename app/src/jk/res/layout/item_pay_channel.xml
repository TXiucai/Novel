<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pay_layout"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_56dp"
    android:background="@drawable/shape_white_00a0e8_5"
    android:paddingLeft="@dimen/dimens_5dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp" />

    <ImageView
        android:id="@+id/pay_icon"
        android:layout_width="@dimen/dimens_150dp"
        android:layout_height="@dimen/dimens_50dp"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/dimens_4dp"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimens_6dp"
        android:layout_marginRight="@dimen/dimens_4dp"
        android:layout_toLeftOf="@+id/paytype_img"
        android:layout_toRightOf="@+id/pay_icon"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/pay_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="@string/PayActivity_weixin"
            android:textColor="#000000"
            android:textSize="@dimen/dimens_13dp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/paytype_img"
        android:layout_width="@dimen/dimens_20dp"
        android:layout_height="@dimen/dimens_20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/dimens_10dp"
        android:background="@mipmap/pay_unselected" />
</RelativeLayout>