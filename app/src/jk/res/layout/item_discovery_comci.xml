<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/list_ad_view_noAD"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--    <RelativeLayout
                android:id="@+id/item_discovery_comic_img_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:minHeight="160dp"
                android:padding="1dp">-->

        <ImageView
            android:id="@+id/item_discovery_comic_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/layer_white_bg"
            android:minHeight="158dp" />

        <!-- </RelativeLayout>      -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/item_discovery_comic_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="@string/BookInfoActivity_mulu"
                android:textColor="@color/black"
                android:textSize="18dp" />

            <!--      <View
                      android:layout_width="0dp"
                      android:layout_height="1dp"
                      android:layout_weight="1" />-->

            <LinearLayout
                android:id="@+id/item_discovery_comic_tag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:orientation="horizontal" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_discovery_comic_flag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:textColor="@color/gray"
            android:textSize="12dp" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/list_ad_view_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <ImageView
            android:id="@+id/list_ad_view_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/layer_white_bg"
            android:scaleType="centerCrop"
            android:visibility="visible" />
    </FrameLayout>
</FrameLayout>