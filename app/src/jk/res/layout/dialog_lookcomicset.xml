<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dimens_200dp"
    android:background="@color/white"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_unlock"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_open_text"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_open_text2"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/dialog_lookcomicset_open_ToggleButton"
            android:layout_width="@dimen/dimens_35dp"
            android:layout_height="@dimen/dimens_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="@color/gray"
            toggle:tbOffColor="@color/gray"
            toggle:tbOnColor="@color/mainColor2" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_small_text1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_small_text2"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/dialog_lookcomicset_small_ToggleButton"
            android:layout_width="@dimen/dimens_35dp"
            android:layout_height="@dimen/dimens_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="@color/gray"
            toggle:tbOffColor="@color/gray"
            toggle:tbOnColor="@color/mainColor2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_fanye_text1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_fanye_text2"
                android:textColor="@color/gray"
                android:textSize="11sp" />
        </LinearLayout>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/dialog_lookcomicset_fanye_ToggleButton"
            android:layout_width="@dimen/dimens_35dp"
            android:layout_height="@dimen/dimens_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="@color/gray"
            toggle:tbOffColor="@color/gray"
            toggle:tbOnColor="@color/mainColor2" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_50dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_fanye_yejian"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dialog_lookcomicset_fanye_text2"
                android:textColor="@color/gray"
                android:textSize="12sp"
                android:visibility="gone" />
        </LinearLayout>

        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/dialog_lookcomicset_yejian_ToggleButton"
            android:layout_width="@dimen/dimens_35dp"
            android:layout_height="@dimen/dimens_20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp_10"
            toggle:tbBorderWidth="1dp"
            toggle:tbOffBorderColor="@color/gray"
            toggle:tbOffColor="@color/gray"
            toggle:tbOnColor="@color/mainColor" />

    </RelativeLayout>
</LinearLayout>