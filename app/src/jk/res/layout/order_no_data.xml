<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_no_data"
        android:layout_width="@dimen/dimens_120dp"
        android:layout_height="@dimen/dimens_80dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_120dp"
        android:scaleType="center"
        android:src="@mipmap/order_no_data" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/iv_no_data"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dimens_10dp"
        android:gravity="center"
        android:text="@string/order_become_vip"
        android:textColor="@color/color_929292"
        android:textSize="@dimen/dimens_14sp" />

</RelativeLayout>