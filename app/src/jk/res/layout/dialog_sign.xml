<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#60000000">

    <FrameLayout
        android:id="@+id/popwindow_sign_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_380dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/signin_blackframe_shape"
            android:orientation="vertical">
            f

            <TextView
                android:id="@+id/popwindow_sign_golds"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:gravity="center"
                android:text="+500金币"
                android:textColor="@color/black"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/popwindow_sign_golds_tomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="明日获得50金币"
                android:textColor="@color/gray"
                android:textSize="@dimen/public_12_dp" />

            <LinearLayout
                android:id="@+id/popwindow_sign_book_havebook"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/popwindow_sign_book_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:id="@+id/popwindow_sign_book_layout1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/popwindow_sign_book1"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/popwindow_sign_bookname1"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textColor="@color/read_textColor" />

                    </LinearLayout>

                    <View
                        android:id="@+id/popwindow_sign_view2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:id="@+id/popwindow_sign_book_layout2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/popwindow_sign_book2"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/popwindow_sign_bookname2"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textColor="@color/read_textColor" />

                    </LinearLayout>

                    <View
                        android:id="@+id/popwindow_sign_view3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>

                    <LinearLayout
                        android:id="@+id/popwindow_sign_book_layout3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/popwindow_sign_book3"
                            android:layout_width="90dp"
                            android:layout_height="120dp"
                            android:layout_marginTop="20dp"
                            android:scaleType="centerCrop" />

                        <TextView
                            android:id="@+id/popwindow_sign_bookname3"
                            android:layout_width="90dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:ellipsize="end"
                            android:gravity="center_horizontal"
                            android:singleLine="true"
                            android:textColor="@color/read_textColor" />

                    </LinearLayout>

                    <View
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_weight="1"></View>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/dimens_20dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/popwindow_sign_alladd"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dimens_32dp"
                        android:background="@drawable/shape_ff8350_20"
                        android:text="@string/SigninActivity_yes"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <Button
                        android:id="@+id/popwindow_sign_no"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/dimens_15dp"
                        android:background="@null"
                        android:text="@string/SigninActivity_no"
                        android:textColor="@color/color_9a9a9a"
                        android:textSize="12sp" />
                </LinearLayout>
            </LinearLayout>

            <Button
                android:id="@+id/popwindow_sign_nobook"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="35dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/signin_pop_addbook"
                android:text="好的"
                android:visibility="gone" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>