<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/img_background"
        android:layout_width="@dimen/dimens_25dp"
        android:layout_height="@dimen/dimens_8dp"
        android:layout_marginTop="@dimen/dimens_15dp"
        android:background="@mipmap/channel_selected"
        android:visibility="gone" />

    <TextView
        android:id="@+id/tx_channel"
        android:layout_width="wrap_content"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_height="@dimen/dimens_25dp"
        android:gravity="center"
        android:textColor="@color/color_1a1a1a"
        android:textSize="14sp" />
</RelativeLayout>