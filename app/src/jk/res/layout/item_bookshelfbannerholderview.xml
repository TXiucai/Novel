<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_120dp"
        android:layout_centerInParent="true"
        android:orientation="horizontal"
        android:padding="@dimen/dimens_10dp">

        <ImageView
            android:id="@+id/item_BookShelfBannerHolderView_img"
            android:layout_width="@dimen/dimens_70dp"
            android:layout_height="@dimen/dimens_100dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dimens_15dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/item_BookShelfBannerHolderView_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="爱如"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/item_BookShelfBannerHolderView_des"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dimens_5dp"
                android:enabled="true"
                android:lines="4"
                android:text="爱如"
                android:textColor="@color/color_c0c0c0"
                android:textSize="12sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>