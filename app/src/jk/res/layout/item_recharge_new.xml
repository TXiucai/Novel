<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/item_recharge_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:orientation="vertical"
            android:paddingLeft="15dp">

            <TextView
                android:id="@+id/item_recharge_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="￥6"
                android:textColor="@color/white"
                android:textSize="25dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/item_recharge_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="540书币"
                android:textColor="@color/white"
                android:textSize="12dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"

            android:padding="5dp"
            android:visibility="gone"

            >


            <TextView
                android:id="@+id/item_recharge_note"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/mainColor"
                android:textSize="@dimen/public_10_dp" />

        </LinearLayout>


        <com.heiheilianzai.app.view.RotateTextView
            android:id="@+id/item_recharge_flag"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0.5dp"
            android:layout_marginRight="0.5dp"
            android:background="@mipmap/corner"
            android:gravity="center"
            android:text="asdf"
            android:textColor="@color/red"
            android:textSize="7dp"
            android:visibility="gone" />
    </RelativeLayout>
</RelativeLayout>