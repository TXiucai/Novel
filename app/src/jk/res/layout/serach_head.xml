<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:orientation="vertical">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_45dp"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginTop="@dimen/dimens_2dp"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:layout_marginBottom="@dimen/dimens_2dp"
        android:paddingTop="@dimen/dimens_5dp"
        android:paddingBottom="@dimen/dimens_5dp"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/srach_head_RadioGroup"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_25dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"></RadioGroup>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimens_1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dimens_20dp"
        android:layout_marginRight="@dimen/dimens_20dp"
        android:background="@color/lightgray2" />
</LinearLayout>