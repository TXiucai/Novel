<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_60000000">

    <LinearLayout
        android:layout_width="@dimen/dimens_265dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/home_notice_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_310dp"/>



        <View
            android:id="@+id/home_notice_close"
            android:layout_width="@dimen/dimens_25dp"
            android:layout_height="@dimen/dimens_25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dimens_25dp"
            android:background="@mipmap/ic_home_notice_close" />
    </LinearLayout>
</RelativeLayout>