<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/tools"
    android:id="@+id/activity_main_vitualkey"
    android:background="@mipmap/page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/common_titlebar" />

        <LinearLayout
            android:id="@+id/activity_settings_switch_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/white_80"
            android:orientation="vertical"
            android:visibility="visible">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_tongbu"
                    android:textSize="@dimen/public_12_dp" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/activity_settings_same"
                    android:layout_width="@dimen/dimens_45dp"
                    android:layout_height="@dimen/dimens_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    toggle:tbBorderWidth="@dimen/dimens_1dp"
                    toggle:tbOffBorderColor="@color/lightgray2"
                    toggle:tbOnColor="@color/mainColor2" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="WiFi下自动下载已购章节"
                    android:textSize="@dimen/public_12_dp" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/activity_settings_wifi"
                    android:layout_width="@dimen/dimens_45dp"
                    android:layout_height="@dimen/dimens_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    toggle:tbBorderWidth="@dimen/dimens_1dp"
                    toggle:tbOffBorderColor="@color/lightgray2"
                    toggle:tbOnColor="@color/mainColor2" />

            </RelativeLayout>

            <View
                android:id="@+id/automation_buy_next_lv"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/white_80" />

            <RelativeLayout
                android:id="@+id/automation_buy_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_antobuy"
                    android:textSize="@dimen/public_12_dp" />

                <com.zcw.togglebutton.ToggleButton
                    android:id="@+id/activity_settings_auto"
                    android:layout_width="@dimen/dimens_45dp"
                    android:layout_height="@dimen/dimens_25dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    toggle:tbBorderWidth="@dimen/dimens_1dp"
                    toggle:tbOffBorderColor="@color/lightgray2"
                    toggle:tbOnColor="@color/mainColor2" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/white_80"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/activity_settings_clear_cache"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_clear"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2" />

            <RelativeLayout
                android:id="@+id/activity_settings_support"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_market"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2" />

            <RelativeLayout
                android:id="@+id/activity_settings_share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_friend"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2" />

            <RelativeLayout
                android:id="@+id/activity_settings_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_language"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/activity_settings_version"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_version"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />

                <TextView
                    android:id="@+id/activity_settings_version_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_45dp"
                    android:textColor="@color/red"
                    android:textSize="@dimen/dimens_10dp" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dimens_0_3dp"
                android:background="@color/lightgray2"
                android:visibility="gone" />

            <RelativeLayout
                android:id="@+id/activity_settings_about"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/dimens_10dp"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="@string/SettingsActivity_adout"
                    android:textSize="@dimen/public_12_dp" />

                <ImageView
                    android:layout_width="@dimen/dimens_30dp"
                    android:layout_height="@dimen/dimens_30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/dimens_10dp"
                    android:background="@mipmap/right_arrow" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/activity_settings_logout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimens_10dp"
            android:background="@color/white_80"
            android:gravity="center"
            android:padding="@dimen/dimens_20dp"
            android:text="@string/SettingsActivity_exit"
            android:textColor="@color/red"
            android:textSize="@dimen/public_12_dp" />
    </LinearLayout>
</RelativeLayout>