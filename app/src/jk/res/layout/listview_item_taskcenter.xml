<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/listview_taskcenter_tasktype_layout"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_8dp"
            android:background="@color/gray2" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimens_20dp"
            android:layout_marginTop="@dimen/dimens_8dp"
            android:layout_marginBottom="@dimen/dimens_8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/dimens_3dp"
                android:layout_height="@dimen/dimens_13dp"
                android:layout_gravity="center_vertical"

                android:layout_marginLeft="@dimen/dimens_20dp"
                android:layout_marginTop="@dimen/dimens_2dp"
                android:background="@drawable/shape_task_item" />

            <TextView
                android:id="@+id/listview_taskcenter_tasktype"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:text="日常任务"
                android:textColor="@color/black"
                android:textSize="16dp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:background="@color/lightgray2" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimens_10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingRight="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingBottom="@dimen/dp_10">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/listview_taskcenter_task_labe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:text="日常任务"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/listview_taskcenter_award"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dimens_10dp"
                    android:text="日常任务"
                    android:textColor="@color/color_ff8350"
                    android:textSize="10sp" />
            </LinearLayout>


            <TextView
                android:id="@+id/listview_taskcenter_task_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimens_10dp"

                android:text="日常任务"
                android:textColor="@color/gray"
                android:textSize="12sp" />

        </LinearLayout>


        <TextView
            android:id="@+id/listview_taskcenter_status"
            android:layout_width="@dimen/dimens_50dp"
            android:layout_height="@dimen/dimens_18dp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="@dimen/dimens_25dp"
            android:background="@drawable/shape_taskcenter_green"
            android:gravity="center"
            android:text="已完成"
            android:textColor="@color/white"
            android:textSize="12sp" />
    </LinearLayout>


</LinearLayout>